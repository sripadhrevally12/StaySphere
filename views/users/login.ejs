<% layout("/layouts/boilerplate") %>

<style>
/* ================= BASE (MOBILE FIRST) ================= */

.login-title {
  font-size: 1.8rem;
  font-weight: 700;
  margin-bottom: 1.5rem;
  text-align: center;
}

.login-card {
  border-radius: 1rem;
  box-shadow: 0 12px 30px rgba(0,0,0,0.1);
  background: #fff;
}

.btn-login {
  background-color: #ff385c;
  border: none;
  color: white;
  font-weight: 600;
  border-radius: 999px;
  padding: 0.55rem;
}

.btn-login:hover {
  background-color: #e11d48;
}

.form-control {
  border-radius: 0.6rem;
  padding: 0.55rem 0.75rem;
}

.form-control:focus {
  box-shadow: none;
  border-color: #ff385c;
}

/* ================= DESKTOP ONLY ================= */
@media (min-width: 992px) {

  .login-title {
    font-size: 2.2rem;
    margin-bottom: 2rem;
  }

  .login-card {
    padding: 2.5rem !important;
  }

  .form-control {
    padding: 0.7rem 1rem;
    font-size: 1.05rem;
  }

  .btn-login {
    padding: 0.75rem;
    font-size: 1.05rem;
  }
}
</style>

<div class="container">
  <div class="row justify-content-center align-items-center mt-5">

    <!-- Desktop bigger, mobile same -->
    <div class="col-lg-5 col-md-6 col-sm-10">

      <h1 class="login-title">Welcome Back</h1>

      <div class="card login-card p-4">

        <form action="/login" method="POST" class="needs-validation" novalidate>

          <div class="mb-3">
            <label for="username" class="form-label fw-semibold">
              Username
            </label>
            <input
              name="username"
              id="username"
              type="text"
              class="form-control"
              required>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label fw-semibold">
              Password
            </label>
            <input
              name="password"
              id="password"
              type="password"
              class="form-control"
              required>
          </div>

          <button class="btn btn-login w-100 mt-3">
            Login
          </button>

        </form>

      </div>

    </div>

  </div>
</div>
